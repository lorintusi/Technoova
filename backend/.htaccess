# .htaccess for API routing
RewriteEngine On

# Handle CORS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Route all API requests to api/index.php
# Match /api/test, /api/auth, /api/dashboard, etc.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/?(.*)$ api/index.php [QSA,L]

# Also handle direct access to api/index.php
RewriteCond %{REQUEST_URI} ^/backend/api/?$
RewriteRule ^.*$ api/index.php [L]

# Security: Deny direct access to config.php
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>

# Allow access to setup scripts (remove after installation!)
<FilesMatch "^(install|setup_db)\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

